@charset "utf-8"

/* частотники */
trans =
    transition 0.3s ease all
transshort =
    transition 0.15s ease all
shad =
    box-shadow 0 0.1rem 0.2rem rgba(0, 0, 0, 0.35)
shadamb =
    box-shadow 0 0 0.35rem rgba(0, 0, 0, 0.35)

/* шрифты */
fonts = font = 'Open Sans', sans-serif, serif
font-mono = mono = Consolas, monospace

br = 100rem
brsmall = 0.2rem
iconsize = 1.5rem

/* цвета */
act = #446adb
acttext = #446adb
accent1 = #5144db
accent2 = #44dbb5
error = #d44f57
red = error
success = #4ab660
green = success
warning = #ff9748
orange = warning

theme = 'Day'

.error
    color error
.success
    color success
.warning
    color warning
.accent
    color act

bl = #e1e2e5
bd = #c8cdd1

text = #666
dark = rgb(35, 35, 35)
snow = #fafafa

/* анимации */
@keyframes rotate
    100%
        transform rotate(360deg)
@keyframes fadeOut
    from
        opacity 1
        visibility visible
    to
        opacity 0
        visibility hidden
.fadeout
    animation forwards 0.5s linear fadeOut

@require 'hvost.styl'

