    font-family 'Iosevka'
    src url('/fonts/iosevka-lightitalic.woff2') format('woff2')
    font-weight 400
    font-style italic

h1, h2, h3, h4, h5, h6
    margin-bottom 0
    color accent1
    .blue &
        color white
    .white &
        color @color
    line-height 1.5em
    b
