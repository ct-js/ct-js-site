act = #446adb
accent1 = #5144db
trans =
    transition 0.3s ease all
transshort =
    transition 0.15s ease all
shad =
    box-shadow 0 0.1rem 0.2rem rgba(0, 0, 0, 0.35)
shadamb =
    box-shadow 0 0.2rem 0.5rem rgba(0, 0, 0, 0.1), 0 0.4rem 1rem rgba(0, 0, 0, 0.15)
fonts = font = 'Open Sans', 'Cairo', sans-serif, serif

html, body
    margin 0
    padding 0
    position relative
    height 100%
    scroll-behavior smooth
    @media (prefers-reduced-motion: reduce)
        scroll-behavior auto
    text-align center
body
    font 14px/20px fonts
    color text
    background white

h1, h2, h3
    margin-bottom 0.25em
    color accent1
    font-weight 400
    line-height 1.5em
h1:first-child
    margin-top 0

.aPatronList
    display flex
    flex-flow row wrap
    gap 0.75rem
    align-items baseline
    justify-content center

.aPatron
    width 4.5rem
    img
        border-radius 100%
        width 4rem
        height @width

main
    padding 1rem

.button
    display inline-block
    box-sizing border-box
    font-weight 400
    letter-spacing 1px
    margin 1.5rem 0.8rem 0.4rem
    margin-inline-start 0
    padding 1rem 3rem
    {trans}
    border-radius 100rem
    color white
    background act
    text-decoration none !important
    text-align center
    line-height 1
    border 0
    cursor pointer
    span
        vertical-align middle
        line-height 1.5rem
    &:hover
        background accent1
        color white