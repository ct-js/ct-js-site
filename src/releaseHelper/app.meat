style.
    body, html {
        position: relative;
        margin: 0;
        height: 100%;
        font-family: sans-serif;
        line-height: 1.5em;
        background: #161427;
        color: #DAD6DA;
    }
    h1, h2, h3 {
        margin: 1em 0 0.25em;
        color: #FF70B1;
        font-weight: 300;
        font-family: 'Open Sans', sans-serif;
    }
    h3 {
        font-weight: 500;
    }
    h1:first-child, h2:first-child, h3:first-child {
        margin-top: 0;
    }
    .Columns {
        display: grid;
        grid-template-columns: 1fr 2fr;
        height: 100vh;
        padding: 1rem;
        grid-gap: 1rem 1rem;
        box-sizing: border-box;
    }
    .Columns > h1 {
        grid-column: 1/3;
    }
    .aColumn {
        overflow: auto;
        padding-right: 1rem;
    }
    label {
        display: block;
        margin: 1rem 0;
    }
    input[type="text"], textarea {
        width: 100%;
        box-sizing: border-box;
        background: inherit;
        color: inherit;
        border: 1px solid #282646;
        font: inherit;
        padding: 0.25em 0.5em;
        border-radius: 0.35rem;
    }
    textarea {
        height: 10rem;
    }
    code, pre {
        font-family: Iosevka, 'Iosevka SS07', monospace;
    }
    code > pre {
        display: block;
        padding: 0.5rem 1rem;
        border: 2px solid #fff4;
        box-sizing: border-box;
        max-height: 15rem;
        overflow: auto;
    }
    pre {
        white-space: pre-wrap;
    }
    a {
        color: #FFCFD4;
    }
    a:hover {
        color: #FF70B1;
    }
.Columns
    h1 Release helper
    .aColumn
        h2 Common
        label
            b Version:
            input(type="text" data-bindinput="version" value="${state.version || ''}" placeholder="0.0.0")
        label
            b List of contributors in Markdown format:
            textarea(data-bindinput="contributors") ${state.contributors}
        label
            b Changelog:
            textarea(data-bindinput="changelog") ${state.changelog}
        - for (const lang in state.languages)
            - const l = state.languages[lang];
            h2 ${lang}
            label
                b Pitch:
                input(type="text" maxlength="150" data-bindinput="languages.${lang}.pitch" value="${l.pitch || ''}")
                br
                | ${l.pitch?.length || 0} / 150
            label
                b Highlights:
                textarea(maxlength="2000" data-bindinput="languages.${lang}.highlights") ${l.highlights || ''}
                br
                | ${l.highlights?.length || 0} / 2000
