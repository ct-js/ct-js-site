                        span.catnip-block-aTextLabel With copy
                        catnip-block.computed.wildcard.wildcard.userdefined
                            svg.feather
                                use(xlink:href="/icons.svg#bell")
                            |
                            span.catnip-block-aTextLabel other
                        .catnip-block-Blocks
                            catnip-block-list
